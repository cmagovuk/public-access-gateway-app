<% title(t('.page_title')) %>

<%= form_for @submission, url: wizard_additional_information_submit_path, :method => :post do |f| %>

    <%= f.hidden_field :status, :value => :additional_information %>

    <%= f.govuk_text_area :description, label: { text: t('.page_title'), size:"l" }, max_chars: 3500, hint: {text: t('.hint_html') }, rows:10 %>

    <%= f.govuk_submit %>
    
<% end %>