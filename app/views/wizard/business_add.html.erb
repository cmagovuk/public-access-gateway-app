<% title(t('.page_title')) %>

<% content_for(:back_link) do%>
    <%= link_to t("link.back"), wizard_businesses_path, class: 'govuk-back-link ga-pageLink' %>
<% end %>

<%= form_for @business, :url => wizard_business_add_submit_path, :method => :post  do |f| %>

    <%= f.govuk_error_summary %>
    
    <%= f.govuk_fieldset legend: { text: t('.page_title'),size: "l" } do %>
    
        <%= f.govuk_text_field :name, label: { text: t('.name') } %>
        <%= f.govuk_text_field :street, label: { text: t('.street') } %>
        <%= f.govuk_text_field :townorcity, label: { text: t('.town') } %>
        <%= f.govuk_text_field :county, label: { text: t('.county') } %>
        <%= f.govuk_text_field :postcode, label: { text: t('.postcode') } %>
        <%= f.govuk_url_field :url, label: { text: t('.website') } %>

    <% end %>

    <%= f.govuk_submit %>

<% end %>

