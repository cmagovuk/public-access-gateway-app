<% title(t('.page_title')) %>

<% content_for(:back_link) do%>
    <%= link_to t("link.back"), wizard_businesses_path, class: 'govuk-back-link ga-pageLink' %>
<% end %>

<%= form_for @business, :url => wizard_business_edit_submit_path, :method => :post  do |f| %>

    <%= f.govuk_error_summary %>
    
    <%= f.hidden_field :id %>

    <%= f.govuk_fieldset legend: { text: t('.page_title'),size: "l" } do %>

        <%= f.govuk_text_field :name, label: { text: t('.name') }, width: 'two-thirds' %>
        <%= f.govuk_text_field :street, label: { text: t('.street') }, width: 'two-thirds' %>
        <%= f.govuk_text_field :townorcity, label: { text: t('.town') }, width: 'two-thirds' %>
        <%= f.govuk_text_field :county, label: { text: t('.county') }, width: 'two-thirds' %>
        <%= f.govuk_text_field :postcode, label: { text: t('.postcode') }, width: 'two-thirds' %>
        <%= f.govuk_url_field :url, label: { text: t('.website') }, width: 'two-thirds' %>

    <% end %>

    <%= f.govuk_submit t(".submit_button") %>


<% end %>


