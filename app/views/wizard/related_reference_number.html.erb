<% title(t('.page_title')) %>
<%= render partial: 'back_link' %>

<h1 class="govuk-heading-l"><%= t('.page_title') %></h1>

<%= t(".body_html") %>

<%= form_for @submission, url: wizard_related_reference_number_submit_path, :method => :post do |f| %>

    <%= f.govuk_error_summary %>
    
    <%= f.hidden_field :status, :value => :related_reference_number %>

    <%= f.govuk_text_field :relatedreferencenumber,label: { text: t('.caption') }, width: 'two-thirds' %>

    <%= f.govuk_submit %>
    
<% end %>