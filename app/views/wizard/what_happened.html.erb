<% title(t('.page_title')) %>
<%= render partial: 'back_link' %>

<%= form_for @submission, url: wizard_what_happened_submit_path, :method => :post do |f| %>

    <%= f.hidden_field :status, :value => :what_happened %>

    <%= f.govuk_error_summary %>
    
    <%= f.govuk_text_area :description, label: { text: t('.page_title'), size:"l" }, max_chars: 3500, hint: {text: t('.hint_html') }, rows:10 %>
    
    <%= f.govuk_submit %>
    
<% end %>